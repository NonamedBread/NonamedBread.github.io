  return (
    &lt;BrowserRouter&gt;
      &lt;Header /&gt;
      &lt;Routes &gt;
        &lt;Route path="/" element={&lt;Front/&gt;} /&gt;
        &lt;Route path="/getBlock" element={&lt;Getblock/&gt;}/&gt;
        &lt;Route path="/getTransaction" element={&lt;GetTransaction/&gt;}/&gt;
        &lt;Route path="/address" element={&lt;Address/&gt;}/&gt;
